{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "new problem",
            "type": "process",
            "linux": {
                "command": "touch"
            },
            "windows": {
                "command": "type nul >"
            },
            "args": [
                "${workspaceFolder}/undone/${input:newprob}.cpp"
            ],
            "problemMatcher": [],
            "isBackground": true
        },
        {
            "label": "compile",
            "type": "process",
            "linux": {
                "command": "make",
                "options": {
                    "env": {
                        "CXXFLAGS": "-Wall -Wextra -g -O0",
                        "OUTPUT": "./a.out"
                    },
                    "problemMatcher": "$gcc"
                }
            },
            "windows": {
                "command": "nmake",
                "options": {
                    "env": {
                        "CXXFLAGS": "/EHsc",
                        "OUTPUT": "./a.exe"
                    },
                    "problemMatcher": "$msCompile"
                }
            },
            "args": [
                "FNAME=${file}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "clean",
            "type": "process",
            "linux": {
                "command": "make",
                "options": {
                    "env": {
                        "OUTPUT": "./a.out"
                    }
                }
            },
            "windows": {
                "command": "cmake"
            }
        }
    ],
    "inputs": [
        {
            "id": "newprob",
            "type": "promptString",
            "description": "Problem ID or description as file name",
        },
    ],
}